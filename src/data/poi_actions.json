            {
              "id": "survey_orbital",
              "label": "Orbital Analysis",
              "dreTable": "orbital_scan",
              "requirements": {
                "shipSystems": ["sensors"],
                "minPowerLevel": 15
              },
              "duration": 20,
              "description": "Analyze orbital mechanics and gravitational anomalies"
            }
          ]
        },
        {
          "id": "deploy",
          "label": "Deploy",
          "icon": "deploy",
          "enabled": true,
          "parent": true,
          "description": "Deploy equipment or probes",
          "children": [
            {
              "id": "deploy_probe",
              "label": "Survey Probe",
              "dreTable": "deploy_probe",
              "requirements": {
                "inventory": [{"itemId": "probe_basic", "quantity": 1}],
                "minPowerLevel": 10
