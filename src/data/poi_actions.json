{
  "$schema": "poi_actions_schema",
  "version": "1.0.0",
  "description": "Action definitions for POI interactions - supports hierarchical actions with DRE integration",
  
  "actionDefinitions": {
    "PLANET": {
      "name": "Planet",
      "actions": [
        {
          "id": "moveTo",
          "label": "Move To",
          "icon": "moveTo",
          "enabled": true,
          "immediate": true,
          "description": "Navigate ship to this planet's orbit"
        },
        {
          "id": "survey",
          "label": "Survey",
          "icon": "survey",
          "enabled": true,
          "parent": true,
          "description": "Conduct detailed planetary survey",
          "children": [
            {
              "id": "survey_atmospheric",
              "label": "Atmospheric Scan",
              "dreTable": "atmospheric_scan",
              "requirements": {
                "shipSystems": ["sensors"],
                "minPowerLevel": 20
              },
              "duration": 30,
              "description": "Analyze atmospheric composition and weather patterns"
            },
            {
              "id": "survey_surface",
              "label": "Surface Scan",
              "dreTable": "surface_scan",
              "requirements": {
                "shipSystems": ["sensors", "deep_scanner"],
                "minPowerLevel": 30
              },
              "duration": 45,
              "description": "Scan surface features, mineral deposits, and geological activity"
            },
            {
              "id": "survey_biological",
              "label": "Bio-Scan",
              "dreTable": "bio_scan",
              "requirements": {
                "shipSystems": ["bio_scanner"],
                "minPowerLevel": 25
              },
              "duration": 40,
              "description": "Detect signs of biological activity or biosignatures"
