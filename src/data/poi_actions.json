              "duration": 15,
              "description": "Deploy automated survey probe for long-term monitoring"
            },
            {
              "id": "deploy_beacon",
              "label": "Nav Beacon",
              "dreTable": "deploy_beacon",
              "requirements": {
                "inventory": [{"itemId": "nav_beacon", "quantity": 1}],
